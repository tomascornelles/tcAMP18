<!doctype html>
<html amp lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    {% include 'partials/seo.html.twig' %}

    {% if favicon %}
    <link rel="icon" type="image/png" href="{{ url('theme://images/' ~ favicon) }}" />
    {% endif %}
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-sidebar" src="https://cdn.ampproject.org/v0/amp-sidebar-0.1.js"></script>
    <script async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js"></script>
    
    <script async custom-element="amp-form" src="https://cdn.ampproject.org/v0/amp-form-0.1.js"></script>
    
    <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
    {% include 'partials/head.html.twig' with {page_type: page.template()} %}

  </head>
  <body>

    <header>
      <div class="fondo-fijo"></div>
      <div class="contenido-fijo">
        <div class="logo-svg">
          <a href="{{ home_url }}">
            {% include 'partials/logo.html.twig' %}
          </a>
        </div>
        <a class="menu-toggle js-menu-toggle" on="tap:sidebar.open">
          <span class="tc-menu"></span>
        </a>
      </div>
      <div class="scroll"></div>
    </header>

    <amp-sidebar id="sidebar" layout="nodisplay" side="right">
      <nav class="menu">
        <a class="menu-toggle js-menu-toggle" on="tap:sidebar.close">
          <span class="tc-menu"></span>
        </a>
        <a href="{{ home_url }}" {% if page.slug == "home" or page.parent.slug == "home" %} class="active" {% endif %}>INICIO</a>
        <a href="{{ base_url }}/porfolio" {% if page.slug == "porfolio" or page.parent.slug == "porfolio" %} class="active" {% endif %}>PORFOLIO</a>
        <a href="{{ base_url }}/blog" {% if page.slug == "blog" or page.parent.slug == "blog" %} class="active" {% endif %}>BLOG</a>
        <a href="{{ base_url }}/contacto" {% if page.slug == "contacto" %} class="active" {% endif %}>CONTACTO</a>
      </nav>
    </amp-sidebar>

    {% block content %}{% endblock %}

    <footer>
      <p>
        <a href="https://twitter.com/tomascornelles"><span class="tc-twitter"></span></a>
        <a href="https://www.linkedin.com/in/tomascornelles"><span class="tc-linkedin"></span></a>
        <br>&copy; 2018 Tom√°s Cornelles
      </p>
    </footer>
  </body>
</html>