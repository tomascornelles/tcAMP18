{% extends 'partials/base.html.twig' %}
{% block content %}
<div class="main">
  <section class="work container-c">

    <nav class="breadcrum">
      <a href="{{page.parent.url}}">Volver al {{page.parent.title}} </a>
    </nav>

    <h1>{{ page.title }}</h1>

    {% if (page.header.client or page.header.year or page.header.type or page.header.technology) %}
    <ul class="data">
      {% if page.header.client %}<li>Cliente: {{page.header.client}}</li>{% endif %}
      {% if page.header.year %}<li>Año: {{page.header.year}}</li>{% endif %}
      {% if page.header.type %}<li>Tipo: {% for type in page.header.type %} {{type}} {% endfor %}</li>{% endif %}
      {% if page.header.technology %}<li>Tipo: {% for technology in page.header.technology %} {{technology}} {% endfor %}</li>{% endif %}
    </ul>
    {% endif %}
    
    {% if page.taxonomy.tipo %}
    <span class="tipos">
        {% for tipo in page.taxonomy.tipo %}
        <a href="{{ home_url|rtrim('/') }}/porfolio/tipo{{ config.system.param_sep }}{{ tipo }}" class="p-category">{{ tipo }}</a>
        {% endfor %}
    </span>
    {% endif %}

    <article>
      {{ page.content }}
    </article>
    <div class="social">
      <h4>Compártelo</h4>
      <p>
        <a href="http://twitter.com/share?text={{ page.title }}, Compártelo por favor: &url={{page.url(true)}}" class="twitter"><em class="tc-twitter"></em></a>
        <a href="http://www.facebook.com/sharer.php?u={{page.url(true)}}" class="facebook"><em class="tc-facebook"></em></i></a>
        <a href="https://plus.google.com/share?url={{page.url(true)}}" class="googleplus"><em class="tc-google-plus"></em></a>
        <a href="http://www.linkedin.com/shareArticle?url={{page.url(true)}}" class="linkedin"><em class="tc-linkedin"></em></a>
      </p>
    </div>
  </section>
</div>
{% endblock %}