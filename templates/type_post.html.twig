{% extends 'partials/base.html.twig' %}
{% block content %}
<div class="main">
  <section class="post container-c">
    <nav><p>
      <a href="{{base_url}}/blog" class="button l"><span class="tc-left"></span> Volver al blog</a>
    </p></nav>
    <h1>
      {{ page.title }}
    </h1>

    {% if page.taxonomy.category %}
    <div class="categories">
        {% for category in page.taxonomy.category %}
        <a href="{{ blog.url|rtrim('/') }}/category{{ config.system.param_sep }}{{ category }}" class="p-category">{{ category }}</a>
        {% endfor %}
    </div>
    {% endif %}

    <div class="data"><span>{{ page.date|nicetime(true) }}</span></div>
    <article>
      {{ page.content }}
    </article>
    <div class="social">
      <h4>Compártelo</h4>
      <p>
        <a href="http://twitter.com/share?text={{ page.title }}, Compártelo por favor: &url={{page.url(true)}}" class="twitter"><em class="tc-twitter"></em></a>
        <a href="http://www.facebook.com/sharer.php?u={{page.url(true)}}" class="facebook"><em class="tc-facebook"></em></i></a>
        <a href="https://plus.google.com/share?url={{page.url(true)}}" class="googleplus"><em class="tc-google-plus"></em></a>
        <a href="http://www.linkedin.com/shareArticle?url={{page.url(true)}}" class="linkedin"><em class="tc-linkedin"></em></a>
      </p>
    </div>
  </section>
</div>
{% endblock %}