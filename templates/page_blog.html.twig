{% extends 'partials/base.html.twig' %}
{% block content %}
<div class="main">
  <section class="container-c">
    <h1>
      {{ page.title }}
    </h1>
    {{ page.content }}
    {% set collection = page.collection() %}
    {% for child in collection %}
      {% include 'partials/blog_item.html.twig' with {'blog':page, 'page':child, 'truncate':true} %}
    {% endfor %}
  </section>
</div>
{% endblock %}